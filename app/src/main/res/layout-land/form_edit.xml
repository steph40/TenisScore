<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/squash_rackets" />

    <EditText
        android:id="@+id/tourDateEdit"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/custom_edit_text"
        android:clickable="false"
        android:cursorVisible="false"
        android:drawableStart="@drawable/calendar"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Data do Jogo"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tourNameEdit"
        app:layout_constraintTop_toTopOf="@+id/tourNameEdit"></EditText>

    <EditText
        android:id="@+id/tourNameEdit"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/trophy"
        android:hint="Nome do Jogo"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"></EditText>

    <EditText
        android:id="@+id/playerName1Edit"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/tennis"
        android:hint="Nome do Jogador 1"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tourNameEdit"
        app:layout_constraintTop_toBottomOf="@+id/tourNameEdit"></EditText>

    <EditText
        android:id="@+id/playerName2Edit"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/tennis"
        android:hint="Nome do Jogador 2"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tourDateEdit"
        app:layout_constraintTop_toTopOf="@+id/playerName1Edit"></EditText>
</androidx.constraintlayout.widget.ConstraintLayout>